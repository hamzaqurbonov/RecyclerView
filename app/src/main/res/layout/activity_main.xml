<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


<!--    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout-->
<!--        android:id="@+id/swipeRefreshLayout"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="50dp" />-->




    <Spinner
        android:id="@+id/spinner_young"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinnerDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_young" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.723"
        app:layout_constraintStart_toEndOf="@+id/spinnerDoc"
        app:layout_constraintTop_toBottomOf="@+id/spinner_young" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_name_input"
        android:layout_width="271dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        app:counterEnabled="true"
        app:endIconMode="clear_text"
        app:helperTextTextColor="#125AEA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerDoc">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_short_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="short url" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/white"
        android:text="Қўшиш"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_name_input" />

    <Button
        android:id="@+id/pasteButton"
        android:layout_width="85dp"
        android:layout_height="80dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="68dp"
        android:text="Копия"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.746"
        app:layout_constraintStart_toEndOf="@+id/edit_name_input"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />


    <ImageView
        android:id="@+id/add_plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/add_2_24px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.965"
        app:layout_constraintStart_toEndOf="@+id/add_button"
        app:layout_constraintTop_toBottomOf="@+id/pasteButton" />

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#1C988D"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_collection"
            android:layout_width="271dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="24dp"
            app:counterEnabled="true"
            app:endIconMode="clear_text"
            app:helperTextTextColor="#125AEA"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="425dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_edit_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add collection" />
        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/add_collection_button"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="27dp"
            android:layout_toEndOf="@+id/edit_collection"
            android:text="Add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.304"
            app:layout_constraintStart_toEndOf="@+id/edit_collection"
            tools:layout_editor_absoluteY="425dp" />

        <Spinner
            android:id="@+id/spinner_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_collection_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edit_collection" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_document"
            android:layout_width="271dp"
            android:layout_height="80dp"
            android:layout_below="@+id/spinner_collection"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="57dp"
            app:counterEnabled="true"
            app:endIconMode="clear_text"
            app:helperTextTextColor="#125AEA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_collection">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_edit_document"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add document" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/add_document_button"
            android:layout_width="85dp"
            android:layout_height="80dp"
            android:layout_below="@+id/spinner_collection"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="25dp"
            android:text="Add document"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.589"
            app:layout_constraintStart_toEndOf="@+id/edit_document"
            app:layout_constraintTop_toBottomOf="@+id/add_collection_button" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>